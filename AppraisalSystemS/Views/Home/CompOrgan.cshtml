@model AppraisalSystemS.Models.Comp_Organ

@{
    ViewBag.Title = "Медициналық қызметкерлер және ОФП педагогтері үшін";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
}

<h2></h2>


<br />
<br />
<br />
<h2 style="text-align:center">Медициналық қызметкерлер және ОФП педагогтері ретінде кіру</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="margin-left:25%">
        <h4></h4>
        <br>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <b class="control-label col-md-2"> <span class="input-group-text"> <i class="fa fa-envelope"></i> </span></b>

            <div class="col-md-10">
                @Html.EditorFor(model => model.comp_organ_name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Логин: ", } })
                @Html.ValidationMessageFor(model => model.comp_organ_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2"> <span class="input-group-text"> <i class="fa fa-lock"></i> </span></b>

            <div class="col-md-10">
                @Html.PasswordFor(model => model.comp_organ_password, new { @class = "form-control", @placeholder = "Құпия сөз: ", })
                @Html.ValidationMessageFor(model => model.comp_organ_password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Кіру" class="btn btn-info btn-block" />
            </div>
        </div>
    </div>
}



<p style="color:red">@ViewBag.msg</p>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


